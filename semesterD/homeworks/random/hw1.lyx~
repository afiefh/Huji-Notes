\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
P\left(5\right) & = & \frac{4}{36}\\
P\left(6\right) & = & \frac{5}{36}\\
P\left(7\right) & = & \frac{6}{36}\\
P\left(\left\{ 5,6\right\} \right) & = & \frac{9}{36}\\
P\left(\left\{ 6,7\right\} \right) & = & \frac{11}{36}\\
P\left(\left\{ 5,6\right\} \cap\left\{ 6,7\right\} \right) & = & P\left(6\right)=\frac{6}{36}\\
P\left(\left\{ 5,6\right\} \right)\cdot P\left(\left\{ 6,7\right\} \right) & = & \frac{9}{36}\cdot\frac{11}{36}=\frac{11}{144}\end{eqnarray*}

\end_inset


