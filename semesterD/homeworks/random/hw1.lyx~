\begin_layout Subsection
א
\end_layout

\begin_layout Standard
צ"ל 
\begin_inset Formula $p\left(a\leq X\leq b\right)=F_{x}\left(b\right)-F_{x}\left(a\right)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
p\left(a\leq X\leq b\right) & = & \int_{a}^{b}p\left(x\right)dx\\
 & = & \int_{-\infty}^{b}p\left(x\right)dx-\int_{-\infty}^{a}p\left(x\right)\\
 & = & F_{x}\left(b\right)-F_{x}\left(a\right)\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Subsection
ב
\end_layout

\begin_layout Standard
רואים כי 
\begin_inset Formula $f_{x}\left(\cdot\right)>0$
\end_inset

 כי פונקציות אקספוננציאליות הם תמיד גדולות מאפס.
 צ"ל כי 
\begin_inset Formula $\int_{-\infty}^{\infty}f_{x}\left(a\right)\partial a=1$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\int_{-\infty}^{\infty}f\left(a\right)\partial a & = & \int_{0}^{\infty}3e^{-3a}\partial a\\
 & = & \left[\frac{3e^{-3a}}{-3}\right]_{0}^{\infty}\\
 & = & 0--1\\
 & = & 1\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Subsection
ג
\end_layout

\begin_layout Standard
פותרים עבור 
\begin_inset Formula $a>0$
\end_inset

 כי כל לראות כי עבור 
\begin_inset Formula $a\leq0$
\end_inset

 האינטגרל מתאפס.
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
F_{X}\left(a\right) & = & \int_{-\infty}^{a}f\left(a^{\prime}\right)\partial a^{\prime}\\
 & = & \int_{0}^{a}3e^{-3a^{\prime}}\partial a^{\prime}\\
 & = & \left[\frac{3e^{-3a^{\prime}}}{-3}\right]_{0}^{a}\\
 & = & 1-e^{-3a}\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
לכן
\end_layout

\begin_layout Standard
\begin_inset Formula \[
F_{X}\left(a\right)=\begin{cases}
0 & a\leq0\\
1-e^{-3a} & a>0\end{cases}\]

\end_inset


\end_layout

\begin_layout Subsection
ד
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
p_{x}\left(X<5\right) & = & F_{x}\left(5\right)=1-e^{-15}\\
p_{x}\left(X>5\right) & = & 1-F_{x}\left(5\right)\\
 & = & e^{-15}\\
F\left(X\leq5\right) & = & F\left(X<5\right)\\
 & = & 1-e^{-15}\end{eqnarray*}

\end_inset


\end_layout

