\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\Re\left(\frac{1}{z+1}\right) & = & c\\
\frac{\frac{1}{z+1}+\frac{1}{\overline{z}+1}}{2} & = & c\\
\frac{\frac{z+1+\overline{z}+1}{\left(z+1\right)\left(\overline{z}+1\right)}}{2} & = & c\\
\frac{2x+2}{\left(z+1\right)\left(\overline{z}+1\right)} & = & 2c\\
\frac{2x+2}{\left(z+1\right)\overline{\left(z+1\right)}} & = & 2c\\
\frac{2x+2}{\left(x+1\right)^{2}+y^{2}} & = & 2c\\
2x+2 & = & 2c\left(\left(x+1\right)^{2}+y^{2}\right)\\
x+1 & = & c\left(x+1\right)^{2}+cy^{2}\\
x+1 & = & c\left(x^{2}+2x+1\right)+cy^{2}\\
-cx^{2}-cy^{2}+x-2cx & = & c-1\\
cx^{2}+cy^{2}-x+2cx & = & 1-c\\
x^{2}+y^{2}-\frac{x}{c}+2x & = & \frac{1}{c}-1\\
x^{2}+y^{2}-x\left(\frac{1}{c}+2\right) & = & \frac{1}{c}-1\\
\left(x-\frac{1}{2c}-1\right)^{2}+y^{2} & = & \frac{1}{c}-1+\left(\frac{1}{2c}+1\right)^{2}\\
\left(x-\frac{1}{2c}-1\right)^{2}+y^{2} & = & \frac{8c+1}{4c^{2}}\end{eqnarray*}

\end_inset


\end_layout

