\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\frac{1}{1+i} & = & \frac{1}{1+i}\cdot\frac{1-i}{1-i}\\
 & = & \frac{1-i}{2}\\
\frac{1+2i}{i} & = & \frac{1+2i}{i}\cdot\frac{-i}{-i}\\
 & = & -i+2\\
\frac{2+3i}{2-3i} & = & \frac{2+3i}{2-3i}\cdot\frac{2+3i}{2+3i}\\
 & = & \frac{4+12i-9}{13}\\
 & = & \frac{12i-5}{13}\\
\left(1-2i\right)^{2} & = & 1-4i-4\\
 & = & -3-4i\\
\left(1+3i\right)^{9} & = & \left(\sqrt{10}e^{i\arctan\left(\frac{3}{1}\right)}\right)^{9}\\
 & = & \left(\sqrt{10}e^{i0.39758\pi}\right)^{9}\\
 & = & \sqrt{10^{9}}e^{i3.578\pi}\end{eqnarray*}

\end_inset


