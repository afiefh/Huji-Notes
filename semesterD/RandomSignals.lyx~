\begin_layout Standard
\begin_inset Formula \[
\frac{1}{2\left(1-\gamma^{2}\right)}\cdot\left(\frac{\left(a-\mu_{x}\right)^{2}}{\sigma_{x}^{2}}-2\gamma\frac{\left(a-\mu_{x}\right)\left(b-\mu_{y}\right)}{\sigma_{x}\sigma_{y}}+\frac{\left(b-\mu_{y}\right)^{2}}{\sigma_{y}^{2}}\right)=\frac{\left(b-\frac{r\sigma_{y}a}{\sigma_{x}}\right)^{2}}{-2\sigma_{x}^{2}\left(1-r^{2}\right)}+\frac{a^{2}}{2\sigma_{x}}\]

\end_inset


\end_layout

\begin_layout Standard
לא נוכיח את זה כי זה אלגברה פשוטה
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\frac{f_{xy}\left(a,b\right)}{f_{x}\left(a\right)} & = & \frac{\frac{1}{2\pi\sqrt{1-r^{2}}\sigma_{x}\sigma_{y}}}{\frac{1}{\sqrt{2\pi}\sigma_{x}}}\frac{\exp\left\{ \frac{\left(b-\frac{r\sigma_{y}a}{\sigma_{x}}\right)^{2}}{-2\sigma_{x}^{2}\left(1-r^{2}\right)}+\frac{a^{2}}{2\sigma_{x}}\right\} }{\exp\left\{ \frac{a^{2}}{2\sigma_{x}^{2}}\right\} }\\
f_{x\vert y}\left(b\vert a\right) & = & \frac{1}{\sqrt{2\pi}\sqrt{2-r^{2}}\sigma_{y}}\exp\left\{ \frac{-1}{2\left(1-r^{2}\right)\sigma_{y}^{2}}\left(b-\frac{r\sigma_{y}}{\sigma_{x}}a\right)^{2}\right\} \\
 & \sim & N\left(\frac{r\sigma_{y}a}{\sigma_{x}},\left(1-r^{2}\right)\sigma_{y}^{2}\right)\end{eqnarray*}

\end_inset


