\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
E\left[x\right] & = & \int_{-\infty}^{\infty}af_{x}\left(a\right)da\\
\mbox{var}\left(x\right) & = & \sigma_{x}^{2}=E\left(\left(x-E\left[x\right]\right)^{2}\right)\\
 & = & \int_{-\infty}^{\infty}\left(a-E\left[x\right]\right)^{2}f_{x}\left(a\right)da\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
