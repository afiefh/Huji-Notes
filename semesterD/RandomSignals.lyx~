\begin_layout Section
פונק' יוצרת מומנטים
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\phi_{x}\left(s\right) & = & \int_{-\infty}^{\infty}e^{sa}f_{x}\left(a\right)da\\
 & = & E\left[e^{sa}\right]\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\phi_{x}^{\prime}\left(s\right) & = & \int_{-\infty}^{\infty}ae^{sa}f_{x}\left(a\right)da\\
\phi_{x}^{\prime}\left(0\right) & = & \int_{-\infty}^{\infty}af_{x}\left(a\right)da=E\left[x\right]\\
\phi_{x}^{\prime\prime}\left(0\right) & = & \int_{-\infty}^{\infty}a^{2}f_{x}\left(a\right)da\\
\phi_{x}^{\left(n\right)}\left(s\right) & = & \int_{-\infty}^{\infty}a^{n}e^{sa}f_{x}\left(a\right)da\\
\phi_{x}^{\left(n\right)}\left(0\right) & = & \int_{-\infty}^{\infty}a^{n}f_{x}\left(a\right)da\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Section
התפלגות גאוסית
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
X & \sim & N\left(\mu,\sigma^{2}\right)\\
f_{x}\left(a\right) & = & \frac{1}{\sqrt{2\pi\sigma^{2}}}e^{-\frac{\left(a-\mu\right)^{2}}{2\sigma^{2}}}\\
\phi_{x}\left(s\right) & = & \int_{-\infty}^{\infty}e^{sa}\frac{1}{\sqrt{2\pi\sigma^{2}}}e^{-\frac{\left(a-\mu\right)^{2}}{2\sigma^{2}}}da\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
נשתמש בהחלפת משתנים 
\begin_inset Formula $b=\frac{a-\mu}{\sigma}$
\end_inset

 אזי 
\begin_inset Formula $db=\frac{1}{\sigma}da$
\end_inset

 ו 
\begin_inset Formula $a=\sigma b+\mu$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\phi_{x}\left(s\right) & = & \int_{-\infty}^{\infty}e^{s\left(\sigma b+\mu\right)}\frac{1}{\sqrt{2\pi\sigma^{2}}}e^{\frac{-b^{2}}{2}}\sigma db\\
 & = & \frac{1}{\sqrt{2\pi}}\int_{-\infty}^{\infty}e^{s\left(\sigma b+\mu\right)-\frac{b^{2}}{2}}db\\
\phi_{x}\left(s\right) & = & \frac{1}{\sqrt{2\pi}}\int_{-\infty}^{\infty}e^{-\frac{1}{2}\left(b^{2}-2b\sigma s\right)}e^{s\mu}db\\
 & = & \frac{e^{s\mu}}{\sqrt{2\pi}}\int_{-\infty}^{\infty}e^{-\frac{1}{2}\left(b^{2}-2b\sigma s+\sigma^{2}s^{2}-\sigma^{2}s^{2}\right)}db\\
 & = & e^{s\mu+\frac{s^{2}\sigma^{2}}{2}}\frac{1}{\sqrt{2\pi}}\int_{-\infty}^{\infty}e^{-\frac{\left(b-s\sigma\right)^{2}}{2}}db\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
לא יודעים לחשב מה שבאינטגרל אבל זו פונק' צפיפות של 
\begin_inset Formula $N\left(\sigma s,1\right)$
\end_inset

 אזי
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\phi_{x}\left(s\right) & = & e^{s\mu+\frac{s^{2}\sigma^{2}}{2}}\\
\phi_{x}^{\prime}\left(s\right) & = & \left(\mu+\frac{2s\sigma^{2}}{2}\right)e^{s\mu+\frac{s^{2}\sigma^{2}}{2}}\\
\phi^{\prime}\left(0\right) & = & \mu=E\left[x\right]\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\phi_{x}^{\prime\prime}\left(s\right) & = & \left[\sigma^{2}+\left(\mu+s\sigma^{2}\right)\right]e^{s\mu+\frac{s^{2}\sigma^{2}}{2}}\\
E\left[x^{2}\right] & = & \phi^{\prime\prime}\left(0\right)=\sigma^{2}+\mu^{2}\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Section
פונקצית פילוג של זוג מ"א 
\begin_inset Formula $\left(x,y\right)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
F_{\left(x,y\right)}\left(a,b\right) & = & P\left(x\leq a,y\leq b\right)\\
\lim_{a\to-\infty}F_{xy}\left(a,b\right) & = & 0\\
\lim_{b\to-\infty}F_{xy}\left(a,b\right) & = & 0\\
\lim_{\begin{matrix}a\to\infty\\
b\to\infty\end{matrix}}F_{xy}\left(a,b\right) & = & 1\\
P\left(a_{1}<x\leq a_{2},b_{1}<y\leq b_{2}\right) & = & F_{xy}\left(a_{2},b_{2}\right)-F_{xy}\left(a_{2},b_{1}\right)-F_{xy}\left(a_{1},b_{2}\right)+F_{xy}\left(a_{1},b_{1}\right)\\
F_{x}\left(a\right) & = & P\left(x\leq a\right)\\
 & = & P\left(x\leq a,y\leq\infty\right)=F_{x,y}\left(a,\infty\right)\\
F_{y}\left(b\right) & = & F_{x,y}\left(\infty,b\right)\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
f_{xy}\left(a,b\right) & = & \frac{\partial^{2}F_{x,y}\left(a,b\right)}{dadb}\\
F_{xy}\left(a,b\right) & = & \int_{-\infty}^{a}d\alpha\int_{-\infty}^{b}f_{x,y}\left(\alpha,\beta\right)d\beta\end{eqnarray*}

\end_inset


\end_layout

