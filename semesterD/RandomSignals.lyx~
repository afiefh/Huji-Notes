\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\mu & = & \begin{pmatrix}\mu_{x}\\
\mu_{y}\end{pmatrix}\\
\Sigma & = & \begin{pmatrix}\sigma_{x}^{2} & \gamma\sigma_{x}\sigma_{y}\\
\gamma\sigma_{x}\sigma_{y} & \sigma_{y}^{2}\end{pmatrix}\\
f\left(a,b\right) & = & \frac{1}{2\pi\sqrt{\left|\Sigma\right|}}\cdot\exp\left(-\frac{1}{2}\left[\begin{pmatrix}a\\
b\end{pmatrix}-\mu\right]\Sigma^{-1}\left[\begin{pmatrix}a\\
b\end{pmatrix}-\mu\right]\right)\\
f_{x} & = & \int_{-\infty}^{\infty}f_{xy}\left(a,b\right)db\end{eqnarray*}

