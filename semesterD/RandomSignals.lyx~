\begin_layout Standard
נחשב 
\begin_inset Formula $F_{x}\left(\alpha\right)$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
F_{x}\left(\alpha\right) & = & P\left(x\leq\alpha\right)\\
 & = & P\left(\arccos\left(\alpha\right)\leq\theta\leq2\pi-\arccos\left(\alpha\right)\right)\\
 & = & \int_{\arccos\left(\alpha\right)}^{2\pi-\arccos\left(\alpha\right)}\frac{1}{2\pi}d\varphi\\
 & = & \frac{2\pi-2\arccos\left(\alpha\right)}{2\pi}\\
 & = & 1-\frac{\arccos\left(\alpha\right)}{\pi}\\
F_{y}\left(\beta\right) & = & P\left(\sin\theta\leq\beta\right)\\
F_{y}\left(\beta\right) & = & \begin{cases}
1 & \beta>1\\
\frac{1}{2}+\frac{\arcsin\beta}{\pi} & 0\leq\beta\leq1\\
\frac{1}{2}+\frac{\arcsin\beta}{\pi} & -1\leq\beta\leq0\\
0 & \beta<-1\end{cases}\\
 & = & \begin{cases}
1 & \beta>1\\
\frac{1}{2}+\arcsin\left(\beta\right) & -1\leq\beta\leq1\\
0 & \beta<0\end{cases}\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
F_{xy}\left(-0.95,-0,95\right) & = & 0\\
F_{x}\left(-0.95\right) & = & 1-\frac{\arccos\left(-0.95\right)}{\pi}\neq0\\
F_{y}\left(-0.95\right) & = & \frac{1}{2}+\frac{\arcsin\left(\beta\right)}{\pi}\neq0\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
נוכיח כי 
\begin_inset Formula $x,y$
\end_inset

 בלתי תלויים ליניארית:
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\mbox{cov}\left(x,y\right) & = & E\left(\left(x-\mu_{x}\right)\left(y-\mu_{y}\right)\right)\\
\mu_{x} & = & E\left[x\right]\\
 & = & \int_{-\infty}^{\infty}f_{x}\left(\alpha\right)\cdot\alpha d\alpha\\
 & = & \int_{-\infty}^{\infty}f_{\theta}\left(\varphi\right)\cos\varphi d\varphi\\
 & = & \int_{0}^{2\pi}\frac{1}{2\pi}\cos\varphi d\varphi\\
 & = & 0\\
\mu_{y} & = & 0\\
\mbox{cov}\left(x,y\right) & = & E\left[x,y\right]\\
 & = & E\left[\cos\theta\sin\theta\right]\\
 & = & \int_{0}^{2\pi}\frac{1}{2\pi}\cos\left(\varphi\right)\sin\left(\varphi\right)d\varphi\\
 & = & \frac{1}{2\pi}\int_{0}^{2\pi}\frac{1}{2}\sin\left(2\varphi\right)d\varphi\\
 & = & \frac{1}{4\pi}\int_{0}^{4\pi}\sin\left(u\right)\cdot\frac{1}{2}du\\
 & = & 0\end{eqnarray*}

\end_inset


\end_layout

