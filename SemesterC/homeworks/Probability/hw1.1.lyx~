\end_layout

\begin_layout Standard
נסמן 
\begin_inset Formula $C=A\cap B$
\end_inset

 אזי 
\begin_inset Formula $A\cup B=\left(A\setminus C\right)\dot{\cup}\left(B\setminus C\right)\dot{\cup}C$
\end_inset

 כאשר האיחודים הם זרים, וההסרות הם שלמים)כלומר 
\begin_inset Formula $C\subseteq A$
\end_inset

 ו 
\begin_inset Formula $C\subseteq B$
\end_inset

(
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\mathcal{P}\left(A\cup B\right) & \overset{?}{=} & \mathcal{P}\left(A\right)+\mathcal{P}\left(B\right)-\mathcal{P}\left(A\cap B\right)\\
\mathcal{P}\left(\left(A\setminus C\right)\dot{\cup}\left(B\setminus C\right)\dot{\cup}C\right) & \overset{?}{=} & \mathcal{P}\left(A\right)+\mathcal{P}\left(B\right)-\mathcal{P}\left(A\cap B\right)\\
\mathcal{P}\left(A\setminus C\right)+\mathcal{P}\left(B\setminus C\right)+\mathcal{P}\left(C\right) & \overset{?}{=} & \mathcal{P}\left(A\right)+\mathcal{P}\left(B\right)-\mathcal{P}\left(A\cap B\right)\\
\mathcal{P}\left(A\right)-\mathcal{P}\left(c\right)+\mathcal{P}\left(B\right)-\mathcal{P}\left(c\right)+\mathcal{P}\left(c\right) & \overset{?}{=} & \mathcal{P}\left(A\right)+\mathcal{P}\left(B\right)-\mathcal{P}\left(A\cap B\right)\\
\mathcal{P}\left(A\right)+\mathcal{P}\left(B\right)-\mathcal{P}\left(c\right) & \overset{?}{=} & \mathcal{P}\left(A\right)+\mathcal{P}\left(B\right)-\mathcal{P}\left(A\cap B\right)\end{eqnarray*}

\end_inset


