\begin_layout Standard
נניח כי ההנחה מתקיימת עבור 
\begin_inset Formula $n$
\end_inset

 ונוכיח עבור 
\begin_inset Formula $n+1$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\sum_{k=1}^{2n+2}\sum_{j=1}^{k}\left(-1\right)^{j+1}j & \overset{?}{=} & 0\\
\underbrace{\sum_{k=1}^{2n}\sum_{j=1}^{k}\left(-1\right)^{j+1}j}_{0}+\sum_{j=1}^{2n+1}\left(-1\right)^{j+1}j+\sum_{j=1}^{2n+2}\left(-1\right)^{j+1}j & \overset{?}{=} & 0\\
\sum_{j=1}^{2n+1}\left(-1\right)^{j+1}j+\sum_{j=1}^{2n+2}\left(-1\right)^{j+1}j & \overset{?}{=} & 0\\
\sum_{j=1}^{2n+1}\left(-1\right)^{j+1}j+\sum_{j=1}^{2n+1}\left(-1\right)^{j+1}j+\underbrace{\left(-1\right)^{2n+3}}_{-1}\left(2n+3\right) & \overset{?}{=} & 0\\
2\sum_{j=1}^{2n+1}\left(-1\right)^{j+1}j-\left(2n+3\right) & \overset{?}{=} & 0\\
2\sum_{j=1}^{2n}\left(-1\right)^{j+1}j+2\cdot\left(-1\right)^{2n+2}\left(2n+2\right)-\left(2n+3\right) & \overset{?}{=} & 0\\
2\sum_{j=1}^{n}\left[\left(j\right)-\left(+j+1\right)\right]+2\cdot\left(2n+2\right)-\left(2n+3\right) & \overset{?}{=} & 0\\
2\sum_{j=1}^{n}-1+2n & \overset{?}{=} & 0\\
-2n+2n & = & 0\end{eqnarray*}

\end_inset


