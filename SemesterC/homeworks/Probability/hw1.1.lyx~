\begin_layout Standard
אם 
\begin_inset Formula $A\subseteq B$
\end_inset

 אזי 
\begin_inset Formula $B=A\dot{\cup}\left(B\setminus A\right)$
\end_inset

 כאשר האיחוד הוא זר
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\mathcal{P}\left(A\right) & \overset{?}{\leq} & \mathcal{P}\left(B\right)\\
\mathcal{P}\left(A\right) & \overset{?}{\leq} & \mathcal{P}\left(A\dot{\cup}\left(B\setminus A\right)\right)\\
\mathcal{P}\left(A\right) & \overset{?}{\leq} & \mathcal{P}\left(A\right)+\mathcal{P}\left(B\setminus A\right)\\
0 & \overset{\checkmark}{\leq} & \mathcal{P}\left(B\setminus A\right)\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
זה נכון תמיד כי 
\begin_inset Formula $1\geq\mathcal{P}\left(X\right)\geq0$
\end_inset


\end_layout

\begin_layout Subsection
