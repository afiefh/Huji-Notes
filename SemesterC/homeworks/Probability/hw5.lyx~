\begin_layout Standard
\begin_inset Formula \[
P\left(A\cap B\right)=p\left(p\cdot p+p\left(1-p\right)p+\left(1-p\right)p\cdot p+\left(1-p\right)\left(1-p\right)pp+\left(1-p\right)p\left(1-p\right)p\right)\]

\end_inset

 אזי
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
P\left(A\vert B\right) & = & \frac{p\left(p\cdot p+p\left(1-p\right)p+\left(1-p\right)p\cdot p+\left(1-p\right)\left(1-p\right)pp+\left(1-p\right)p\left(1-p\right)p\right)}{p}\\
 & = & p^{2}+2\left(1-p\right)p^{2}+2\left(1-p\right)\left(1-p\right)p^{2}\end{eqnarray*}

