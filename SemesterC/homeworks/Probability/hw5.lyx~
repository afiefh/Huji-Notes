\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
P\left(B\vert A\right) & = & \frac{P\left(A\vert B\right)}{P\left(A\cap B\right)}\\
 & = & \frac{p^{2}+2\left(1-p\right)p^{2}+2\left(1-p\right)\left(1-p\right)p^{2}}{\begin{pmatrix}p^{2}+2\left(1-p\right)p^{2}+2\left(1-p\right)\left(1-p\right)p^{2}+\\
\left(1-p\right)\left(2\left(1-p\right)p^{3}+p^{3}+3\left(1-p\right)p^{3}+\right)\end{pmatrix}}\end{eqnarray*}

