\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
{n \choose 2} & \overset{?}{=} & {k \choose 2}+k\left(n-k\right)+{n-k \choose 2}\\
\frac{n!}{2\left(n-2\right)!} & \overset{?}{=} & \frac{k!}{2\cdot\left(k-2\right)!}+k\left(n-k\right)+\frac{\left(n-k\right)!}{2\cdot\left(n-k-2\right)!}\\
\frac{n\left(n-1\right)}{2} & \overset{?}{=} & \frac{k\cdot\left(k-1\right)}{2}+k\left(n-k\right)+\frac{\left(n-k\right)\left(n-k-1\right)}{2}\\
n\left(n-1\right) & \overset{?}{=} & k\left(k-1\right)+2k\left(n-k\right)+\left(n-k\right)\left(n-k-1\right)\\
n\left(n-1\right) & \overset{?}{=} & k^{2}-k+2nk-2k^{2}+n^{2}-nk-n-nk+k^{2}+k\\
n\left(n-1\right) & \overset{\checkmark}{=} & n^{2}-n\end{eqnarray*}

\end_inset


