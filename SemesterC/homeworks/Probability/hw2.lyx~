\begin_layout Standard
מהשוויון הראשון נובע כי:
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
P\left(A\cup\overline{B}\right) & = & P\left(\overline{A}\cup B\right)\\
P\left(A\right)-P\left(A\cap B\right) & = & P\left(B\right)-P\left(A\cap B\right)\\
P\left(A\right) & = & P\left(B\right)\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
מהשוויון השני נובע כי
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
P\left(\overline{A}\cup B\right) & = & P\left(\overline{A}\cup\overline{B}\right)\\
P\left(B\right)-P\left(A\cap B\right) & = & P\left(A\cap B\right)\\
P\left(B\right)-P\left(A\right)P\left(B\right) & = & P\left(A\right)P\left(B\right)\\
P\left(B\right)-P\left(B\right)P\left(B\right) & = & P\left(B\right)P\left(B\right)\\
0 & = & 2P^{2}\left(B\right)-P\left(B\right)\\
0 & = & P\left(B\right)\cdot\left(2P\left(B\right)-1\right)\\
P\left(B\right) & = & 0\\
2P\left(B\right)-1 & = & 0\\
P\left(B\right) & = & \frac{1}{2}\end{eqnarray*}

\end_inset


\end_layout

