\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\int_{-\infty}^{\infty}f\left(\tau\right)\delta\left(t-\tau\right)d\tau & = & \int_{\infty}^{-\infty}f\left(t-x\right)\delta\left(x\right)\left(-dx\right)\\
 & = & \int_{-\infty}^{\infty}f\left(t-x\right)\delta\left(x\right)dx\\
 & = & \int_{-\infty}^{\infty}f\left(t-\tau\right)\delta\left(\tau\right)d\tau\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Subsection
ב
\end_layout

\begin_layout Standard
לפי הגדרה של 
\begin_inset Formula $u\left(t\right)$
\end_inset

 מתקיים כי עבור 
\begin_inset Formula $a>0$
\end_inset

 
\begin_inset Formula $u\left(t+\frac{b}{a}\right)=u\left(at+b\right)$
\end_inset

 ועבור 
\begin_inset Formula $a<0$
\end_inset

 מתקיים 
\begin_inset Formula $u\left(t+\frac{b}{a}\right)=1-u\left(at+b\right)$
\end_inset

 כמו כן 
\begin_inset Formula $\delta\left(t\right)=\frac{\partial u\left(t\right)}{\partial t}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\delta\left(t+\frac{b}{a}\right) & = & \frac{\partial u\left(t+\frac{b}{a}\right)}{d\left(t+\frac{b}{a}\right)}\\
 & = & \frac{\partial u\left(t+\frac{b}{a}\right)}{\partial t}\\
 & = & \frac{\partial u\left(t+\frac{b}{a}\right)}{\partial\left(t+\frac{b}{a}\right)}\cdot\frac{d\left(t+\frac{b}{a}\right)}{\partial t}\\
 & = & \delta\left(t+\frac{b}{a}\right)\cdot1\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
עבור 
\begin_inset Formula $a>0$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\frac{\partial u\left(t+\frac{b}{a}\right)}{\partial t} & = & \frac{\partial u\left(at+b\right)}{\partial t}\\
 & = & \frac{\partial u\left(at+b\right)}{\partial\left(at+b\right)}\cdot\frac{\partial\left(at+b\right)}{\partial t}\\
 & = & \delta\left(at+b\right)\cdot a\\
 & = & \delta\left(at+b\right)\cdot\left|a\right|\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
עבור 
\begin_inset Formula $a>0$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\frac{\partial u\left(t+\frac{b}{a}\right)}{\partial t} & = & \frac{\partial\left(1-u\left(at+b\right)\right)}{\partial t}\\
 & = & \frac{-\partial u\left(at+b\right)}{\partial\left(at+b\right)}\cdot\frac{\partial\left(at+b\right)}{\partial t}\\
 & = & -\delta\left(at+b\right)\cdot a\\
 & = & \delta\left(at+b\right)\cdot\left|a\right|\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
אזי
\end_layout

\begin_layout Standard
\begin_inset Formula \[
\delta\left(at+b\right)=\frac{1}{\left|a\right|}\delta\left(t+\frac{b}{a}\right)\]

\end_inset


\end_layout

\begin_layout Subsection
ב
\end_layout

\begin_layout Standard
לפי ההגדרה של 
\begin_inset Formula $\delta$
\end_inset

 מתקיים 
\begin_inset Formula $\int_{-\infty}^{\infty}\delta\left(t-t_{0}\right)f\left(t\right)dt$
\end_inset

, נשתמש בהחלפת משתנים ונקבל:
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\int_{-\infty}^{\infty}\delta\left(at+b\right)f\left(t\right)dt & = & \int_{-\infty}^{\infty}\delta\left(\tau\right)f\left(\frac{\tau}{a}-\frac{b}{a}\right)\frac{d\tau}{\left|a\right|}\\
 & = & \int_{-\infty}^{\infty}\delta\left(t\right)f\left(-\frac{b}{a}\right)\frac{d\tau}{\left|a\right|}\\
 & = & \int_{-\infty}^{\infty}\delta\left(\tau+\frac{b}{a}\right)f\left(\tau\right)\frac{d\tau}{\left|a\right|}\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Subsection
ג
\end_layout

\begin_layout Standard
נוכיח באינדוקציה
\end_layout

\begin_layout Standard
עבור 
\begin_inset Formula $n=1$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\int_{-\infty}^{\infty}f\left(t\right)\delta^{\prime}\left(t\right)dt & = & \underbrace{f\left(t\right)\delta\left(t\right)}_{0}\vert_{-\infty}^{\infty}-\int_{-\infty}^{\infty}\delta^{\left(n\right)}\left(t\right)f^{\prime}\left(t\right)dt\\
 & = & -\left(-1\right)^{n}+f^{\left(n+1\right)}\left(0\right)\\
 & = & \left(-1\right)^{n+1}f^{\left(n+1\right)}\left(0\right)\end{eqnarray*}

\end_inset


\end_layout

