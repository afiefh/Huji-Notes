\begin_layout Standard
\begin_inset Formula \[
f\left(x\right)=\begin{cases}
1+\frac{1}{a}x & x<0\\
1-\frac{1}{a}x & x\geq0\end{cases}\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
f\left(x\right) & = & \frac{a_{0}}{2}+\sum_{n=1}^{\infty}\left[a_{n}\cos\left(\frac{n\pi x}{L}\right)+b_{n}\sin\left(\frac{n\pi x}{L}\right)\right]\\
a_{0} & = & \frac{1}{a}\int_{-a}^{a}f\left(x\right)dx\\
 & = & \frac{1}{a}\left(\int_{-a}^{0}\left(1+\frac{1}{a}x\right)dx+\int_{0}^{a}\left(1-\frac{1}{a}x\right)dx\right)\\
 & = & \frac{1}{a}\left(\left[x+\frac{1}{2a}x^{2}\right]_{-a}^{0}+\left[x-\frac{1}{2a}x^{2}\right]_{0}^{a}\right)\\
 & = & \frac{1}{a}\left(a-\frac{1}{2a}a^{2}+a-\frac{1}{2a}a^{2}\right)\\
 & = & \frac{1}{a}\left(2a-a\right)\\
 & = & 1\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
a_{n} & = & \frac{1}{a}\int_{-a}^{a}f\left(x\right)\cos\left(\frac{n\pi x}{a}\right)dx\\
 & = & \frac{1}{a}\left(\int_{-a}^{0}\left(1+\frac{1}{a}x\right)\cos\left(\frac{n\pi x}{a}\right)dx+\int_{0}^{a}\left(1-\frac{1}{a}x\right)\cos\left(\frac{n\pi x}{a}\right)\right)\\
 & = & \frac{1}{a}\left(-\frac{a\cos\left(\pi n\right)-a}{\pi^{2}n^{2}}-\frac{a\cos\left(\pi n-a\right)}{\pi^{2}n^{2}}\right)\\
 & = & -\frac{2\cos\left(\pi n\right)-2}{\pi^{2}n^{2}}\\
 & = & \begin{cases}
\frac{4}{\pi^{2}n^{2}} & n\mbox{ is even}\\
0 & n\mbox{ is odd}\end{cases}\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
b_{n} & = & \frac{1}{a}\int_{-a}^{a}f\left(x\right)\sin\left(\frac{n\pi x}{a}\right)dx\\
 & = & \frac{1}{a}\left(\int_{-a}^{0}\left(1+\frac{1}{a}x\right)\sin\left(\frac{n\pi x}{a}\right)dx+\int_{0}^{a}\left(1-\frac{1}{a}x\right)\sin\left(\frac{n\pi x}{a}\right)\right)\\
 & = & \frac{1}{a}\left(\frac{a\sin\left(\pi n\right)-\pi an}{\pi^{2}n^{2}}-\frac{a\sin\left(\pi n\right)-\pi an}{\pi^{2}n^{2}}\right)\\
 & = & 0\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
f\left(x\right) & = & \frac{a_{0}}{2}+\sum_{n=1}^{\infty}\left[a_{n}\cos\left(\frac{n\pi x}{L}\right)+b_{n}\sin\left(\frac{n\pi x}{L}\right)\right]\\
 & = & \frac{1}{2}+\sum_{n=1}^{\infty}-\frac{2\cos\left(\pi n\right)-2}{\pi^{2}n^{2}}\cos\left(\frac{n\pi x}{L}\right)\end{eqnarray*}

\end_inset


\end_layout

