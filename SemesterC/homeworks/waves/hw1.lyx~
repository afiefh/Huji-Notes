\begin_layout Standard
\begin_inset Formula \[
f\left(x\right)=\begin{cases}
b & -\nicefrac{a}{2}<x<\nicefrac{a}{2}\\
0 & \mbox{otherwise}\end{cases}\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\mathcal{F}\left(k\right) & = & \frac{1}{\sqrt{2\pi}}\int_{-\infty}^{\infty}f\left(x\right)e^{-ikx}\\
 & = & \frac{1}{\sqrt{2\pi}}\int_{-\nicefrac{a}{2}}^{\nicefrac{a}{2}}be^{-ikx}\\
 & = & \frac{b}{\sqrt{2\pi}}\int_{-\nicefrac{a}{2}}^{\nicefrac{a}{2}}\left(\cos\left(-kx\right)+i\sin\left(-kx\right)\right)dx\\
 & = & \frac{b}{\sqrt{2\pi}}\left[-\frac{\sin\left(kx\right)}{k}-i\frac{\cos\left(kx\right)}{k}\right]_{-\nicefrac{a}{2}}^{\nicefrac{a}{2}}\\
 & = & \frac{b}{\sqrt{2\pi}}\left[\left(-\frac{\sin\left(-k\frac{a}{2}\right)}{k}-i\frac{\cos\left(-k\frac{a}{2}\right)}{k}\right)-\left(-\frac{\sin\left(k\frac{a}{2}\right)}{k}-i\frac{\cos\left(k\frac{a}{2}\right)}{k}\right)\right]\\
 & = & \frac{b}{\sqrt{2\pi}}\left[\frac{2\sin\left(\frac{ka}{2}\right)}{k}\right]\\
 & = & \frac{\sqrt{2}\cdot b}{k\sqrt{\pi}}\sin\left(\frac{ka}{2}\right)\end{eqnarray*}

\end_inset


\end_layout

