\begin_layout Standard
\begin_inset Formula \[
f\left(x\right)=e^{ax^{2}}\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\mathcal{F}\left(k\right) & = & \frac{1}{\sqrt{2\pi}}\int_{-\infty}^{\infty}f\left(x\right)e^{-ikx}\\
 & = & \frac{1}{\sqrt{2\pi}}\int_{-\infty}^{\infty}e^{ax^{2}}e^{-ikx}\\
 & = & \frac{1}{\sqrt{2\pi}}\int_{-\infty}^{\infty}e^{ax^{2}-ikx}\\
 & = & \frac{1}{\sqrt{2\pi}}\cdot\frac{\sqrt{\pi}e^{-\frac{-k^{2}}{4a}}}{\sqrt{a}}\end{eqnarray*}

\end_inset


\end_layout

