\begin_layout Standard
המהירות היא 
\begin_inset Formula $c=\frac{1}{\sqrt{\mu_{0}\varepsilon_{0}}}$
\end_inset


\end_layout

\begin_layout Subsection
ב
\end_layout

\begin_layout Standard
נגדיר 
\begin_inset Formula $\varepsilon=\frac{\varepsilon_{1}}{\varepsilon_{0}}$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
n & = & \sqrt{\varepsilon_{r}\mu_{r}}=\sqrt{\varepsilon_{r}}=1\\
u & = & \frac{c}{n}=\frac{1}{\sqrt{\varepsilon_{r}\varepsilon_{0}\mu_{0}}}=\frac{1}{\sqrt{\varepsilon_{1}\mu_{0}}}\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Subsection
ג
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\frac{\partial^{2}E_{1}}{\partial t^{2}} & = & \frac{1}{\mu_{0}\varepsilon_{0}}\frac{\partial^{2}E\left(x,z\right)}{\partial x^{2}}\\
\frac{\partial^{2}E_{2}\left(x,t\right)}{\partial t^{2}} & = & \frac{1}{\mu_{0}\varepsilon_{1}}\frac{\partial^{2}E_{2}\left(x,z\right)}{\partial x^{2}}\\
k_{1} & = & \frac{\omega}{c}=\omega\sqrt{\mu_{0}\varepsilon_{0}}\\
k_{2} & = & \frac{\omega\sqrt{\varepsilon_{r}}}{c}=\omega\sqrt{\varepsilon_{1}\mu_{0}}\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
x\in\left(-\infty,0\right) & \Rightarrow & E_{1}\left(x,t\right)=A_{1}\cos\left(\omega t-k_{1}x\right)+B_{1}\cos\left(\omega t+kx+\varphi_{1}\right)\\
x\in\left(-\infty,0\right) & \Rightarrow & E_{2}\left(x,t\right)=A_{2}\cos\left(\omega t-k_{2}x+\varphi_{2}\right)\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
בכיתה ראינו כי 
\begin_inset Formula $\varphi_{2}=0$
\end_inset

, 
\begin_inset Formula $\varphi_{1}=\pi,0$
\end_inset


\end_layout

\begin_layout Standard
כאן 
\begin_inset Formula $\varphi_{1}=\pi$
\end_inset

