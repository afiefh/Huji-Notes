\begin_layout Standard
רוצים שכל האנרגיה תעבור, אזי 
\begin_inset Formula $T=1$
\end_inset

 כלומר 
\begin_inset Formula $\sin\left(k_{2}L\right)=0$
\end_inset

.
 פותרים:
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
k_{2}L & = & n\pi\\
L & = & n\frac{\pi}{k_{2}}\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
כאשר 
\begin_inset Formula $n\in\left\{ 0,1,2,3\dots\right\} $
\end_inset

.
 אפשר לבחור ב 
\begin_inset Formula $n=0$
\end_inset

 אבל אז אין עובי לחומר שלנו, אזי 
\begin_inset Formula $n\neq0$
\end_inset

.
 המינימום מתקבל עבור 
\begin_inset Formula $n=1$
\end_inset

 אזי 
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
L & = & \frac{\pi}{k_{2}}\\
 & = & \frac{\left(\sqrt{\frac{y_{2}}{\rho_{2}}}\right)}{2\nu}\\
 & = & \frac{\sqrt{\frac{2\cdot10^{10}}{2.7\cdot10^{-3}}}}{2\cdot10^{4}}\\
 & \approx & 0.25\mbox{m}\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Subsection
ב
\end_layout

\begin_layout Standard
המינימום מתקבל עבור 
\begin_inset Formula $\sin\left(k_{2}L\right)=1$
\end_inset

 כלומר 
\begin_inset Formula $k_{2}L=n\frac{\pi}{2}$
\end_inset

 עבור 
\begin_inset Formula $n\in\left\{ 1,3\dots\right\} $
\end_inset

.
\end_layout

\begin_layout Standard
במקרה של 
\begin_inset Formula $n=3$
\end_inset

 מקבלים 
\begin_inset Formula $k_{2}L=\frac{3\pi}{2}$
\end_inset

 אזי 
\begin_inset Formula $\nu_{2}=\frac{3}{2}\nu=15\mbox{KHz}$
\end_inset

.
 במקרה של 
\begin_inset Formula $n=1$
\end_inset

 מקבלים 
\begin_inset Formula $k_{2}L=\frac{\pi}{2}$
\end_inset

 אזי 
\begin_inset Formula $\nu_{2}=\frac{1}{2}\nu_{1}=5\mbox{KHz}$
\end_inset

.
 בכל מקרה ההפרש הוא 
\begin_inset Formula $\Delta\nu=5\mbox{KHz}$
\end_inset

.
\end_layout

