\begin_layout Standard
עבור 
\begin_inset Formula $n=1$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
k & = & \frac{n\pi}{L}\\
\frac{\omega}{\sqrt{\frac{T_{0}}{\rho_{0}}}} & = & \frac{n\pi}{L}\\
2\pi\nu\sqrt{\frac{\rho_{0}}{T_{0}}} & = & \frac{n\pi}{L}\\
2\pi\nu\sqrt{\frac{\rho_{0}}{T_{0}}} & = & \frac{\pi}{L}\\
T_{0} & = & 4\nu^{2}L^{2}\rho_{0}\\
\rho_{0} & = & \rho\cdot\pi\left(\frac{d}{2}\right)^{2}\\
 & = & 7.8\cdot10^{3}\cdot\pi\cdot\left(\frac{10^{-3}}{2}\right)^{2}\\
 & = & 6.12\cdot10^{-3}\mbox{\frac{kg}{m}}\\
T_{0} & = & 4740\mbox{N}\end{eqnarray*}

\end_inset


\end_layout

