\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
P\left(\left(A\cap B\right)\cap C\right) & = & P\left(C\vert A\cap B\right)P\left(A\cap B\right)\\
 & = & P\left(C\vert A\cap B\right)P\left(B\vert A\right)P\left(A\right)\end{eqnarray*}

\end_inset


\end_layout

