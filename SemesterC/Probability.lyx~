\end_layout

\begin_layout Standard
\begin_inset Formula $\lim\sup A_{n}\supset\lim\inf A_{n}$
\end_inset


\end_layout

\begin_layout Paragraph
הגדרה:
\end_layout

\begin_layout Standard
\begin_inset Formula $A_{n}$
\end_inset

 מתקנסת ל
\begin_inset Formula $A$
\end_inset

 אם 
\begin_inset Formula $\lim\sup A_{n}=\lim\inf A_{n}=A$
\end_inset

 אזי מסמנים כי 
\begin_inset Formula $\lim A_{n}=A$
\end_inset


\end_layout

\begin_layout Chapter
הרצאה מס.
\numeric on
3
\end_layout

\begin_layout Standard
כזכור לסדרה שלקבוצות 
\begin_inset Formula $\left\{ A_{n}\right\} $
\end_inset

 הגדרת 
\begin_inset Formula $\lim_{n\to\infty}\sup A_{n}=\cap_{k=1}^{\infty}\cap_{n=k}^{\infty}A_{n}$
\end_inset

 ו 
\begin_inset Formula $\lim_{n\to\infty}\inf A_{n}=\cup_{k=1}^{\infty}\cap_{n=1}^{k}A_{n}$
\end_inset

 
\end_layout

\begin_layout Standard
אם 
\begin_inset Formula $\lim_{n=\infty}\sup A_{n}=\lim\inf A-n$
\end_inset

 אז אומרים כי הסדרה 
\begin_inset Formula $\left\{ A_{n}\right\} $
\end_inset

מתכנסת ומגדירים 
\begin_inset Formula $\lim_{n\to\infty}A_{n}=\lim_{n\to\infty}\sup A_{n}$
\end_inset


\end_layout

\begin_layout Standard
הראנו את העובדות הבאות:
\end_layout

\begin_layout Enumerate
אם 
\begin_inset Formula $\left\{ A_{n}\right\} $
\end_inset

 סדרה עולה של מאורעות 
\begin_inset Formula $\left[\forall n:A_{n}\leq A_{n+1}\right]$
\end_inset

 אז 
\begin_inset Formula $\mathcal{P}\left(\cup_{n=1}^{\infty}A_{n}\right)=\lim_{n\to\infty}\mathcal{P}\left(A_{n}\right)$
\end_inset


\end_layout

\begin_layout Enumerate
אם 
\begin_inset Formula $\left\{ A_{n}\right\} $
\end_inset

 סדרה יורדת של מאורעות אז 
\begin_inset Formula $\mathcal{P}\left(\cap_{n=1}^{\infty}A_{n}\right)=\lim_{n\to\infty}\mathcal{P}\left(A_{n}\right)$
\end_inset


\end_layout

\begin_layout Standard
אם 
\begin_inset Formula $\left\{ A_{n}\right\} $
\end_inset

 סדרה עולה אז היא מתכנסת ו 
\begin_inset Formula $\lim_{n\to\infty}A_{n}=\cup_{n=1}^{\infty}A_{n}$
\end_inset

 ואם 
\begin_inset Formula $\left\{ A_{n}\right\} $
\end_inset

 סדרה יורדת אז היא מתכנסת 
\begin_inset Formula $\lim_{n\to\infty}A_{n}=\cap_{n=1}^{\infty}A_{n}$
\end_inset


\end_layout

\begin_layout Paragraph
משפט:
\end_layout

\begin_layout Standard
אם 
\begin_inset Formula $\left\{ A_{n}\right\} $
\end_inset

 סדרה מתכנסת של מאורעות במרחב ההסתברות 
\begin_inset Formula $\left(\Omega,\mathcal{F},\mathcal{P}\right)$
\end_inset

 אז 
\begin_inset Formula $\mathcal{P}\left(\lim_{n\to\infty}A_{n}\right)=\lim_{n\to\infty}\mathcal{P}\left(A_{n}\right)$
\end_inset


\end_layout

\begin_layout Paragraph
הוכחה:
\end_layout

\begin_layout Standard
נשתמש בשתי טענות עזר:
\end_layout

\begin_layout Subparagraph
א:
\end_layout

\begin_layout Standard
לכל סדרת מאורעות 
\begin_inset Formula $\mathcal{P}\left(\lim_{n\to\infty}\sup A_{n}\right)\geq\lim_{n\to\infty}\sup\mathcal{P}\left(A_{n}\right)$
\end_inset


\end_layout

\begin_layout Subparagraph
ב:
\end_layout

\begin_layout Standard
\begin_inset Formula $\mathcal{P}\left(\lim_{n\to\infty}\inf A_{n}\right)\leq\lim_{n\to\infty}\inf\mathcal{P}\left(A_{n}\right)$
\end_inset


\end_layout

\begin_layout Subparagraph
הוכחת א:
\end_layout

\begin_layout Standard
נסמן 
\begin_inset Formula $B_{n}=\cup_{k=0}^{\infty}A_{k}$
\end_inset

 ואת 
\begin_inset Formula $\lim\sup A_{n}=\cap_{n=1}^{\infty}B_{n}$
\end_inset

.
 הסדרה 
\begin_inset Formula $\left\{ B_{n}\right\} $
\end_inset

 היא סדרה יורדת.
 מדוע? 
\begin_inset Formula $B_{n}=\cup_{k=n}^{\infty}A_{k}=A_{n}\cup\left(\cup_{k=n+1}^{\infty}A_{k}\right)=A_{n}\cup B_{n+1}$
\end_inset

 ו 
\begin_inset Formula $B_{n+1}\subseteq B_{n+1}\cup\left(\mbox{something}\right)$
\end_inset

 ולכן 
\begin_inset Formula $B_{n+1}\subseteq B_{n}$
\end_inset

 וכמוכן 
\begin_inset Formula $A_{n}\supseteq A_{n}$
\end_inset

 לכל 
\begin_inset Formula $n$
\end_inset

 ולכן 
\begin_inset Formula $\mathcal{P}\left(A_{n}\right)\leq\mathcal{P}\left(B_{n}\right)$
\end_inset

 לכל 
\begin_inset Formula $n$
\end_inset

.
 אזי 
\begin_inset Formula $\mathcal{P}\left(\lim_{n\to\infty}\sup A_{n}\right)=\mathcal{P}\left(\cap_{n=1}^{\infty}B_{n}\right)=\lim_{n\to\infty}\mathcal{P}\left(B_{n}\right)=\lim_{n\to\infty}\sup\mathcal{P}\left(B_{n}\right)\geq\lim_{n\to\infty}\sup\mathcal{P}\left(A_{n}\right)$
\end_inset

.
\end_layout

\begin_layout Subparagraph
הוכחת חלק ב:
\end_layout

\begin_layout Standard
נגדיר 
\begin_inset Formula $C_{n}=\cap_{k=n}^{\infty}A_{k}$
\end_inset

 אזי 
\begin_inset Formula $\lim_{n\to\infty}A_{n}=\cup_{n=1}^{\infty}C_{n}$
\end_inset

 אז 
\begin_inset Formula $\left\{ C_{n}\right\} $
\end_inset

סדרה עולה כי 
\begin_inset Formula $C_{n}\subseteq A_{n}$
\end_inset

 ולכן 
\begin_inset Formula $\mathcal{P}\left(C_{n}\right)\leq\mathcal{P}\left(A_{n}\right)$
\end_inset

 ולכן 
\begin_inset Formula $\mathcal{P}\left(\lim_{n\to\infty}\inf A_{n}\right)=\mathcal{P}\left(\cup_{n=1}^{\infty}C_{n}\right)=\lim_{n\to\infty}\mathcal{P}\left(C_{n}\right)=\lim_{n\to\infty}\inf\mathcal{P}\left(C_{n}\right)\leq\lim_{n\to\infty}\inf\mathcal{P}\left(A_{n}\right)$
\end_inset


\end_layout

\begin_layout Standard
עכשיו נניח בנוסף שהסדרה 
\begin_inset Formula $\left\{ A_{n}\right\} $
\end_inset

מתכנסת.
 כלומר 
\begin_inset Formula $\lim\left(A_{n}\right)=\lim_{n\to\infty}\sup A_{n}=\lim_{n\to\infty}\inf A_{n}$
\end_inset

 אז 
\begin_inset Formula $\mathcal{P}\left(\lim_{n\to\infty}A_{n}\right)=\mathcal{P}\left(\lim_{n\to\infty}\sup A_{n}\right)\geq\lim_{n\to\infty}\sup\mathcal{P}\left(A_{n}\right)$
\end_inset

.
 אז 
\begin_inset Formula $\mathcal{P}\left(\lim_{n\to\infty}A_{n}\right)=\mathcal{P}\left(\lim_{n\to\infty}\inf A_{n}\right)\leq\lim_{n\to\infty}\inf\mathcal{P}\left(A_{n}\right)$
\end_inset

 בנוסף 
\begin_inset Formula $\lim_{n\to\infty}\sup\mathcal{P}\left(A_{n}\right)\geq\lim_{n\to\infty}\inf\mathcal{P}\left(A_{n}\right)$
\end_inset

.
\end_layout

\begin_layout Standard
ולכן 
\begin_inset Formula $\lim_{n\to\infty}\sup\mathcal{P}\left(A_{n}\right)=\lim_{n\to\infty}\inf\mathcal{P}\left(A_{n}\right)=\mathcal{P}\left(\lim_{n\to\infty}A_{n}\right)$
\end_inset

 כלומר הגבול 
\begin_inset Formula $\lim_{n\to\infty}A_{n}$
\end_inset

 קיים ו 
\begin_inset Formula $\mathcal{P}\left(\lim_{n\to\infty}A_{n}\right)=\lim_{n\to\infty}\mathcal{P}\left(A_{n}\right)$
\end_inset

.
\end_layout

\begin_layout Paragraph
תרגיל:
\end_layout

\begin_layout Standard
מצאו מרחב הסתברות 
\begin_inset Formula $\left(\Omega,\mathcal{F},\mathcal{P}\right)$
\end_inset

 וסתדרת מאורעות 
\begin_inset Formula $\left\{ A_{n}\right\} $
\end_inset

כך ש 
\begin_inset Formula $\lim_{n\to\infty}\sup\mathcal{P}\left(A_{n}\right)<P\left(\lim_{n\to\infty}\sup A_{n}\right)$
\end_inset


\end_layout

\begin_layout Standard
עכשיו נעזוב את האינפי של מרחבי הסתברות ונחזור לחיים הרגילים.
\end_layout

\begin_layout Section
הדכה והכלה
\end_layout

\begin_layout Paragraph
טענה:
\end_layout

\begin_layout Standard
לשתי מאורעות 
\begin_inset Formula $A,B$
\end_inset

 במרחב ההסתברות 
\begin_inset Formula $\left(\Omega,\mathcal{F},\mathcal{P}\right)$
\end_inset

 מתקיים: 
\begin_inset Formula $\mathcal{P}\left(A\cup B\right)=\mathcal{P}\left(A\right)+\mathcal{P}\left(B\right)-\mathcal{P}\left(A\cap B\right)$
\end_inset


\end_layout

\begin_layout Standard
נסמן 
\begin_inset Formula $C=A\cap B$
\end_inset

.
 אזי 
\begin_inset Formula $A\cup B=\left(A\setminus C\right)\cup\left(B\setminus C\right)\cup C$
\end_inset

 וזה איחוד זר.
 לכן
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\mathcal{P}\left(A\cup B\right) & = & \mathcal{P}\left(A\setminus C\right)+\mathcal{P}\left(B\setminus C\right)+\mathcal{P}\left(C\right)\\
 & = & \mathcal{P}\left(A\right)-\mathcal{P}\left(c\right)+\mathcal{P}\left(B\right)-\mathcal{P}\left(c\right)+\mathcal{P}\left(c\right)\\
 & = & \mathcal{P}\left(A\right)+\mathcal{P}\left(B\right)-\mathcal{P}\left(c\right)\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
ההכלה של זה ל
\begin_inset Formula $n$
\end_inset

 מאורעות נקרה עיקרון ההכלה ווהדכה.
\end_layout

\begin_layout Section
פרדוקס יום ההולדת
\end_layout

\begin_layout Standard
