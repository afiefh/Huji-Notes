\begin_layout Chapter
הרצאה מס.?
\end_layout

\begin_layout Section
\begin_inset Formula $\mbox{Covariance}$
\end_inset

 השונות המשותפת
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\mbox{cov}\left(x,y\right) & = & \sum_{i,j}\left(x_{i}-\mu_{x}\right)\left(y_{i}-\mu_{y}\right)P\left(x_{i},y_{i}\right)\\
 & = & \sum_{i}\sum_{j}\left(x_{i}-\mu_{x}\right)\left(y_{i}-\mu_{y}\right)P\left(x_{i},y_{i}\right)\\
 & = & \sum_{i}\sum_{j}\left(x_{i}y_{i}-\mu_{x}y_{i}-\mu_{y}x_{i}+\mu_{x}\mu_{y}\right)P\left(x_{i},y_{j}\right)\\
 & = & \sum_{i}\sum_{j}x_{i}y_{j}P\left(x_{i},y_{j}\right)-\sum_{i}\sum_{j}\mu_{x}y_{j}P\left(x_{i},y_{j}\right)-\sum_{i}\sum_{j}\mu_{y}x_{i}P\left(x_{i},y_{j}\right)+\sum_{i}\sum_{j}\mu_{y}\mu_{x}P\left(x_{i},y_{j}\right)\\
 & = & \sum_{i}\sum_{j}x_{i}y_{j}P\left(x_{i},y_{j}\right)-\mu_{x}\mu_{y}-\mu_{y}\mu_{x}+\mu_{x}\mu_{u}\cdot1\\
 & = & \sum_{i}\sum_{j}x_{i}y_{j}P\left(x_{i},y_{j}\right)-\mu_{x}\mu_{y}\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Chapter
האצאה מס?
\end_layout

\begin_layout Standard
\begin_inset Formula \[
\mbox{cov}\left(aX+b,cY+d\right)=ac\cdot\mbox{cov}\left(X,Y\right)\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\mbox{cov}\left(X+Y,Z\right) & = & E\left[\left(X+Y\right)Z\right]-E\left(X+Y\right)E\left(Z\right)\\
 & = & E\left(XZ+YZ\right)-\left(E\left(X\right)+E\left(Y\right)\right)E\left(Z\right)\\
 & = & E\left(XZ\right)+E\left(YZ\right)-E\left(X\right)E\left(Z\right)-E\left(Y\right)E\left(Z\right)\\
 &  & \underbrace{E\left(XZ\right)+-E\left(X\right)E\left(Z\right)}_{\mbox{cov}\left(X,Z\right)}+\underbrace{E\left(YZ\right)-E\left(Y\right)E\left(Z\right)}_{\mbox{cov}\left(Y,Z\right)}\\
 & = & \mbox{cov}\left(X,Z\right)+\mbox{cov}\left(Y,Z\right)\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Section
מקדם ההתאם
\family roman
\series bold
\shape up
\size larger
\emph off
\bar no
\noun off
\color none
 
\family default
\series default
\shape default
\size default
\emph default
\bar default
\noun default
\color inherit
\lang english
Correletion Coefficient
\end_layout

\begin_layout Standard
\begin_inset Formula \[
\rho\left(X,Y\right)=\frac{\mbox{cov}\left(X,Y\right)}{+\sqrt{\mbox{var}\left(X\right)\cdot\mbox{var}\left(Y\right)}}\]

\end_inset


\end_layout

\begin_layout Paragraph
טענה:
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
\rho\left(aX+b,cY+d\right) & = & \frac{\mbox{cov}\left(aX+b,cY+d\right)}{\sqrt{\mbox{var}\left(aX+b\right)\mbox{var}\left(cY+d\right)}}\\
 & = & \frac{ac\mbox{cov}\left(X,Y\right)}{\sqrt{a^{2}\mbox{var}\left(X\right)c^{2}\mbox{var}\left(Y\right)}}\\
 & = & \frac{ac}{\left|ac\right|}\rho\left(X,Y\right)\\
 & = & \pm\rho\left(X,Y\right)\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
X^{*} & = & \frac{X-\mu_{X}}{\sigma_{X}}\\
Y^{*} & = & \frac{Y-\mu_{Y}}{\sigma_{Y}}\\
E\left(X^{*}\right) & = & 0\\
E\left(Y^{*}\right) & = & 0\\
\mbox{var}\left(X^{*}\right) & = & 1\\
\mbox{var}\left(Y^{*}\right) & = & 1\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Paragraph
טענה:
\end_layout

\begin_layout Standard
\begin_inset Formula \[
-1\leq\rho\left(X,Y\right)\leq+1\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
\rho\left(X,Y\right)=\rho\left(X^{*},Y^{*}\right)=\frac{\mbox{cov}\left(X^{*},Y^{*}\right)}{\sqrt{\mbox{var}\left(X^{*}\right)\mbox{var}\left(Y^{*}\right)}}=\mbox{cov}\left(X^{*},Y^{*}\right)\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
0 & \leq & \mbox{var}\left(X^{*}\pm Y^{*}\right)=\mbox{var}\left(X^{*}\right)+\mbox{var}\left(Y^{*}\right)\pm2\mbox{cov}\left(X^{*},Y*\right)\\
0 & \leq & 2\pm2\mbox{cov}\left(X^{*},Y*\right)\\
1 & \geq & \left|\mbox{cov}\left(X^{*},Y^{*}\right)\right|\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Section
התפלגות מותנת
\end_layout

\begin_layout Standard
\begin_inset Formula $P\left(X=x_{i},Y=y_{j}\right)$
\end_inset

 היא ההתפלגות המשותפת.
\end_layout

\begin_layout Standard
\begin_inset Formula \[
P\left(X=x_{i}\vert Y=y_{i}\right)=\frac{P\left(X=x_{i}\vert Y=y_{j}\right)}{P\left(Y=y_{j}\right)}\]

\end_inset


\end_layout

\begin_layout Standard
זו התפלגות מותנת.
\end_layout

