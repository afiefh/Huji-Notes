\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
Avg\left(S_{i}\right) & \overset{?}{<} & Avg\left(S_{i-1}\right)\\
\frac{\sum_{k=0}^{n-1}\left(n-k\right)\Xi_{s_{i}}\left(k\right)}{n} & \overset{?}{<} & \frac{\sum_{i=0}^{n-1}\left(n-k\right)\Xi_{s_{i-1}}\left(k\right)}{n}\\
\sum_{k=0}^{n-1}\left(n-k\right)\Xi_{s_{i}}\left(k\right) & \overset{?}{<} & \sum_{i=0}^{n-1}\left(n-k\right)\Xi_{s_{i-1}}\left(k\right)\\
\sum_{k=0}^{i-1}\left(n-k\right)\Xi_{s_{i}}\left(k\right)+\sum_{k=i}^{n-1}\left(n-k\right)\Xi_{s_{i}}\left(k\right) & \overset{?}{<} & \sum_{i=0}^{i-1}\left(n-k\right)\Xi_{s_{i-1}}\left(k\right)+\sum_{i=i}^{n-1}\left(n-k\right)\Xi_{s_{i-1}}\left(k\right)\\
\sum_{k=i}^{n-1}\left(n-k\right)\Xi_{s_{i}}\left(k\right) & \overset{?}{<} & \sum_{i=i}^{n-1}\left(n-k\right)\Xi_{s_{i-1}}\left(k\right)\\
\left(n-i\right)\Xi_{s_{i}}\left(i\right)+\left(n-x_{i}^{s_{i-1}}\right)\Xi_{s_{i}}\left(x_{i}^{s_{i-1}}\right) & \overset{?}{<} & \left(n-i\right)\Xi_{s_{i}}\left(i\right)+\left(n-x_{i}^{s_{i-1}}\right)\Xi_{s_{i}}\left(x_{i}^{s_{i-1}}\right)\\
\underbrace{\left(n-i\right)}_{o}a+\underbrace{\left(n-x_{i}^{s_{i-1}}\right)}_{u}b & \overset{?}{<} & \left(n-i\right)b+\left(n-x_{i}^{s_{i-1}}\right)a\\
oa+ub & \overset{?}{<} & ob+ua\\
0 & \overset{?}{<} & ob+ua-oa-ub\\
0 & \overset{?}{<} & o\underbrace{\left(b-a\right)}_{>0}+u\left(a-b\right)\\
0 & \overset{?}{<} & \underbrace{o-u}_{o>u}\end{eqnarray*}

\end_inset


