\begin_inset Formula $\vec{v}=-v\hat{r}$
\end_inset

 אזי שקול הכוחות היא:
\end_layout

\begin_layout Standard
\begin_inset Formula \begin{eqnarray*}
F & = & mg\hat{r}+m\omega^{2}r\left(-\cos\left(90-\theta\right)\hat{z}+\sin\left(90-\theta\right)\hat{r}\right)\\
a & = & g\hat{r}+\vec{\omega}^{2}\left(R\sin\theta\right)\left(-\sin\theta\hat{z}+\cos\theta\hat{r}\right)\\
a & = & g\hat{r}+\omega^{2}\left(\cos^{2}\theta+\sin^{2}\theta\right)\cdot\left(R\sin\theta\right)\left(-\sin\theta\hat{z}+\cos\theta\hat{r}\right)\\
 & = & g\hat{r}+-\omega^{2}R\sin^{2}\theta\hat{z}+\omega^{2}R\cos\theta\sin\theta\hat{r}\\
\tan\alpha & = & \frac{\omega^{2}R\sin^{2}\theta}{g+\omega^{2}R\cos\theta\sin\theta}\\
 & = & \frac{R\sin^{2}\theta}{\frac{g}{\omega^{2}}+R\cos\theta\sin\theta}\\
 & = & \frac{\sin^{2}\theta}{\beta+\cos\theta\sin\theta}\end{eqnarray*}

\end_inset


